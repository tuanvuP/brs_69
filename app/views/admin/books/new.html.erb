<% provide :title, t("new_book") %>

<p>
  <h1><%= t ".content_1" %></h1>
  <div class="row-flush">
    <div class="col-md-6 col-md-offset-3">
      <div class="new-book-form">
        <%= form_for @book, url: admin_books_path, html: {multipart: true} do |f| %>
          <%= render "shared/error_messages", object: f.object %>

          <%= select_tag(:category_id, options_for_select(@categories),
            prompt: t(".select_category")) %>

          <span class="picture">
            <%= f.file_field :book_img_file_name %>
          </span>

          <%= f.label t("field_book_title") %>
          <%= f.text_field :title, class: "form-control" %>

          <%= f.label t("field_book_description") %>
          <%= f.text_field :description, class: "form-control" %>

          <%= f.label t("field_author") %>
          <%= f.text_field :author, class: "form-control" %>

          <%= f.submit t("submit_btn"), class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</p>
