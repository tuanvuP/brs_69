<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container", id="container_ajax">
    <% if logged_in? %>
      <%= link_to t(".logo_page"), books_path, id: "logo" %>
    <% else %>
      <%= link_to t(".logo_page"), root_path, id: "logo" %>
    <% end %>
    <nav>

      <ul class="nav navbar-nav navbar-left">
        <% if logged_in? %>
          <li><%= link_to t(".users"), users_path %></li>
          <li class="dropdown">
            <%= link_to "#" , class: "dropdown-toggle", data: {toggle:"dropdown"} do %>
            <%= current_user.name %> <b class="caret"></b> <% end %>
            <ul class="dropdown-menu">
              <li><%= link_to t(".profile"), current_user %></li>
              <li><%= link_to t(".settings"), edit_user_path(current_user) %></li>
              <% if !current_user.admin? %>
                <li><%= link_to t("my_requests"), requests_path %></li>
              <% end %>
              <li class="divider"></li>
              <li>
                <%= link_to t(".logout"), logout_path, method: :delete, remote: true %>
              </li>
            </ul>
          </li>
          <% if current_user.admin? %>
            <li> <%= link_to t(".admin"), admin_root_path %> </li>
          <% end %>
        <% else %>
          <li><%= link_to t("login"), login_path %></li>
          <li><%= link_to t("signup"), signup_path %></li>
        <% end %>


        <li class="dropdown">
          <%= link_to "#" , class: "dropdown-toggle", data: {toggle:"dropdown"} do %>
          <%= "Cate" %> <b class="caret"></b> <% end %>
          <ul class="dropdown-menu">
            <li><%= link_to "New", new_category_path %></li>
            <li><%= link_to "Index", categories_path %></li>
          </ul>
        </li>


      </ul>


      <ul class="nav navbar-nav navbar-right">
        <li class="search-custom">
          <%= form_tag search_path, method: :get do %>
            <%= text_field_tag(:search, params[:search],class: "form-control") %>
            <%= submit_tag t(".search"),class: "btn btn-default" %>
          <% end %>
        </li>

        <li><%= link_to t(".books"), books_path %></li>
        <li class="dropdown">
          <%= link_to "#" , class: "dropdown-toggle", data: {toggle:"dropdown"} do %>
          <%= t".categories" %> <b class="caret"></b> <% end %>
          <ul class="dropdown-menu scroll">
            <% load_categories.each do |category| %>
              <li class="<%= "active" if params[:category] == category.name %>">
                <%= link_to category.name, books_path(category: category.name) %>
              </li>
            <% end %>
          </ul>
        </li>
      </ul>
    </nav>
  </div>
</header>
