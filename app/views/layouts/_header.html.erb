<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t(".review_books"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-left">
        <li><%= link_to t("login"), login_path %></li>
        <li><%= link_to t("signup") , signup_path %></li>
        <% if logged_in? %>
          <li><%= link_to t("users"), "#" %></li>
          <li class="dropdown">
            <%= link_to t("link") , class: "dropdown-toggle", data: {toggle:"dropdown"} do %>
            <%= t("account") %> <b class="caret"></b> <% end %>
            <ul class="dropdown-menu">
              <li><%= link_to t("profile"), current_user %></li>
              <li><%= link_to t("settings"), "#" %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("logout"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("login"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
