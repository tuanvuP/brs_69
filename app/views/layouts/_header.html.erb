<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t(".logo_page"), root_path, id: "logo" %>
    <nav>

      <ul class="nav navbar-nav navbar-left">
        <% if logged_in? %>
          <li><%= link_to t(".users"), users_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t".account" %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t(".profile"), current_user %></li>
              <li><%= link_to t(".settings"), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t(".logout"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("login"), login_path %></li>
          <li><%= link_to t("signup"), signup_path %></li>
        <% end %>
      </ul>

      <ul class="nav navbar-nav navbar-right">
        <% if logged_in? && current_user.admin? %>
          <li><%= link_to t(".add_book_btn"), new_book_path %></li>
        <% end %>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <%= t".categories" %> <b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to t(".all_categories"), books_path %></li>
            <% Category.all.each do |category| %>
              <li class="<%= "active" if params[:category] == category.name %>">
                <%= link_to category.name, books_path(category: category.name) %>
              </li>
            <% end %>
          </ul>
        </li>
      </ul>
    </nav>
  </div>
</header>
