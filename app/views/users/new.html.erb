<% provide:title, t("field_signup") %>
<h1><%=  t("field_signup") %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render "shared/error_messages", object: f.object %>

      <%= f.label t("field_name") %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.label t("field_email") %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label t("field_password") %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label t("field_pass_confi"), t("field_confimation") %>
      <%= f.password_field :password_confirmation, class: "form-control" %>

      <%= f.submit t("submit_create"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
